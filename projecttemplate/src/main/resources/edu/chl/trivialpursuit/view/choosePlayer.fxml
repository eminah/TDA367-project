<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>

<BorderPane stylesheets="@test.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.chl.TrivialPursuit.controller.ChoosePlayerController">
   <top>
      <HBox prefHeight="64.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Choose number of players">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <ComboBox id="numPlayers" fx:id="numPlayers" onAction="#comboAction" prefWidth="150.0" promptText="Choose Here">
               <items>

                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="2" />
                     <String fx:value="3" />
                     <String fx:value="4" />
                     <String fx:value="5" />
                     <String fx:value="6" />
                  </FXCollections>
               </items>

               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </ComboBox>
            <Label fx:id="starLabel" text="">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="90.0" right="10.0" top="30.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label stylesheets="@label.css" text="Player 1 ">
               <padding>
                  <Insets top="20.0" />
               </padding></Label>
            <HBox>
               <children>
                  <TextField fx:id="tOne" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="1 - 10 Characters (name)" />
                  <Label fx:id="mustPromtNameOne" />
               </children>
            </HBox>
            <Label stylesheets="@label.css" text="Player 2" />
            <HBox>
               <children>
                  <TextField fx:id="tTwo" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="1 - 10 Characters (name)" />
                  <Label fx:id="mustPromtNameTwo" />
               </children>
            </HBox>
            <Label stylesheets="@label.css" text="Player 3" />
            <HBox>
               <children>
                  <TextField fx:id="tThree" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="1 - 10 Characters (name)" />
                  <Label fx:id="mustPromtNameThree" />
               </children>
            </HBox>
            <Label stylesheets="@label.css" text="Player 4" />
            <HBox>
               <children>
                  <TextField fx:id="tFour" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="1 - 10 Characters (name)" />
                  <Label fx:id="mustPromtNameFour" />
               </children>
            </HBox>
            <Label stylesheets="@label.css" text="Player 5" />
            <HBox>
               <children>
                  <TextField fx:id="tFive" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="1 - 10 Characters (name)" />
                  <Label fx:id="mustPromtNameFive" />
               </children>
            </HBox>
            <Label stylesheets="@label.css" text="Player 6" />
            <HBox>
               <children>
                  <TextField fx:id="tSix" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="1 - 10 Characters (name)" />
                  <Label fx:id="mustPromtNameSix" />
               </children>
            </HBox><HBox prefHeight="29.0" prefWidth="540.0">
            <children>
               <Region prefHeight="48.0" prefWidth="395.0" />

               <Button fx:id="doneButton" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#onButtonPressed" text="Done" />

            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
            </padding>
         </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </VBox>
   </center>
